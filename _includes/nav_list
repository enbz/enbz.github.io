<nav class="nav__list">
  {% if page.sidebar.title %}<h3 class="nav__title" style="padding-left: 0;">{{ page.sidebar.title }}</h3>{% endif %}
  <input id="ac-toc" name="accordion-toc" type="checkbox" />
  <label for="ac-toc">{{ site.data.ui-text[site.locale].menu_label | default: "Toggle Menu" }}</label>
  <ul class="nav__items">
    {% for navname in include.nav %}
      {% assign navigation = site.data.navigation[navname] %}
      {% for nav in navigation %}
        {% assign category_total = 0 %}
        
        {% if nav.children %}
          {% for child in nav.children %}
            {% assign count = site.posts | where: "category", nav.category | where_exp: "item", "item.tags contains child.tag" | size %}
            {% assign category_total = category_total | plus: count %}
          {% endfor %}
        {% endif %}

        <li>
          {% if nav.url %}
            <a href="{{ nav.url | relative_url }}">
              <span class="nav__sub-title">
                {{ nav.title }}
                {% if category_total > 0 %}<span class="count">({{ category_total }})</span>{% endif %}
              </span>
            </a>
          {% else %}
            <span class="nav__sub-title">
              {{ nav.title }}
              {% if category_total > 0 %}<span class="count">({{ category_total }})</span>{% endif %}
            </span>
          {% endif %}

          {% if nav.children %}
            <ul>
              {% for child in nav.children %}
                {% assign post_count = site.posts | where: "category", nav.category | where_exp: "item", "item.tags contains child.tag" | size %}
                <li>
                  <a href="{{ child.url | relative_url }}"{% if child.url == page.url %} class="active"{% endif %}>
                    {{ child.title }} <span class="count">({{ post_count }})</span>
                  </a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    {% endfor %}
  </ul>
</nav>
